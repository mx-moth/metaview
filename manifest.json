{

	"manifest_version": 2,
	"name": "Metaview",
	"version": "1.0",

	"description": "View social meta tags for a website",
	"homepage_url": "https://github.com/timheap/metaview",

	"icons": {
		"48": "icons/share.svg",
		"96": "icons/share.svg"
	},

	"permissions": [
		"activeTab",
		"storage"
	],

	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/share.svg",
		"default_title": "View meta tags",
		"default_popup": "popup/metaview.html"
	}

}
